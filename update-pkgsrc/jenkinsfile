pipeline {
  agent {label params.NODE}

  parameters {
    string(name: 'NODE', defaultValue: 'src-builder')
  }

  environment {
    PKGSRC_DIR   = "/usr/pkgsrc"
    PKGSRC_WIP_DIR = "${PKGSRC_DIR}/wip"
  }

  stages {
    stage('Update pkgsrc') {
      steps {
        script {
          sh(script: "cd ${PKGSRC_DIR} && git pull")
        }
      }
    }
    stage('Update pkgsrc-wip') {
      steps {
        script {
          sh(script: "cd ${PKGSRC_WIP_DIR} && git pull")
        }
      }
    }
  }
}

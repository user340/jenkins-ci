pipeline {
  stages {
    stage('Update pkgsrc in all hosts') {
      parallel(
        stage('builder') {
          agent {
            label 'src-builder'
          }
          steps {
            build(job: 'update-pkgsrc')
          }
        }
        stage('builder') {
          agent {
            label 'Jenkins'
          }
          steps {
            build(job: 'update-pkgsrc')
          }
        }
        stage('builder') {
          agent {
            label 'Zabbix'
          }
          steps {
            build(job: 'update-pkgsrc')
          }
        }
      )
    }
  }
}
